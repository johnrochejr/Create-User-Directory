<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Profile</title>
    <link rel="stylesheet" href="/screen.css">
  </head>
  <body>
    <div class="user">
      <figure>
        <img src="{{avatar}}" alt="Portrait">
      </figure>
      <div class="contact">
        <h1>{{name}}</h1>
        <p>
          {{#address.city}}
          {{address.city}},
          {{/address.country}}
          {{address.country}} |
          {{#job}}
          {{job}}, {{company}}
          {{/job}}
          {{^job}}
          <span class="funemplyed">Available for Hire</span>
          {{/job}}
        </p>
        <p> {{email}} | {{phone}}</p>
      </div>
    </div>
      <div class="details">
        <dl>
          {{#university}}
          <dt>Education</dt>
          <dd>{{university}}</dd>
          <dt>Skills</dt>
          {{#skills}}
          <dd>{{.}}</dd>
          {{/skills}}
        </dl>
      </div>
    </div>
  </body>
</html>
